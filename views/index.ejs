<!DOCTYPE html>
<html>
  <head>
    <title>Fitness AB</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="debugtoggle" class="column" style="position: fixed; top: 0%; left: 0%; width: 128px; height: 128px;">
      <button onclick="debugToggle()" style="background-color: red; width: 100%; height: 100%;">TOGGLE DEBUG</button>
      <button onclick="location.href='/'" style="background-color: red; width: 100%; height: 100%;">LANDING PAGE</button>
      <button onclick="location.href='/profile'" style="background-color: red; width: 100%; height: 100%;">PROFILE</button>
      <% if (typeof userid != 'undefined') { %>
      <h1>Logged in as: <%= userid %></h1>
      <% } %>
    </div>
    <div style="height: 1200px; width: 675px; background-color: #333366; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
      <% if (typeof nomenu == 'undefined') { %>
      <div style="height: 88.75%; width: 100%;">
        <%- include(page) %>
      </div>
      <div class="menu">
        <button class="profile" onclick="location.href='/profile'"></button>
        <button class="stats" onclick="location.href='/stats'"></button>
        <button class="classes" onclick="location.href='/classes'"></button>
        <button class="bookings" onclick="location.href='/bookings'"></button>
        <button class="settings"></button>
      </div>
    </div>
    <% } else { %>
      <div style="height: 100%; width: 100%;">
        <%- include(page) %>
      </div>
    <% } %>
  </body>
  <script>

    async function debugToggle () {
      if (document.getElementsByTagName('style').length == 0) {
        var framestyle = document.createElement('style');
        framestyle.innerHTML = `
        div.frame div:not(.textbox) {
          border-style: dotted;
          border-width: 1px;
          border-color: white;
        }
        `;
        document.head.appendChild(framestyle);
      }
      else {
        var framestyle = document.getElementsByTagName('style')[0];
        framestyle.remove();
      }

    }
  </script>
</html>
