<!DOCTYPE html>
<html>
  <head>
    <title>Fitness AB</title>
    <link rel='stylesheet' href='/stylesheets/adminstyle.css' />
  </head>
  <body>
    <div id="debugtoggle" class="column" style="position: fixed; top: 0%; left: 0%; width: 128px; height: 128px;">
      <button onclick="debugToggle()" style="background-color: red; width: 100%; height: 100%;">TOGGLE DEBUG</button>
      <button onclick="location.href='/'" style="background-color: red; width: 100%; height: 100%;">LANDING PAGE</button>
      <button onclick="location.href='/profile'" style="background-color: red; width: 100%; height: 100%;">PROFILE</button>
    </div>
      <h1 class="titleheader">Fitness AB</h1>
      <div class="row header darkbackground">
        <button class="header">Profile</button>
        <button class="header" id="partials/admin/classes" onclick="location.href='/admin/classes'">Classes</button>
        <button class="header" id="partials/admin/schedule" onclick="location.href='/admin/schedule'">Schedule</button>
        <button class="header">Facilities</button>
        <button class="header" id="partials/admin/instructors" onclick="location.href='/admin/instructors'">Instructors</button>
      </div>
      <div style="">
        <%- include(page) %>
      </div>
      
  </body>
  <script>
    window.onload = function() {
      elemid = <%- JSON.stringify(page)%>;
      document.getElementById(elemid).classList.add("active");
    }

    async function debugToggle () {
      if (document.getElementsByTagName('style').length == 0) {
        var framestyle = document.createElement('style');
        framestyle.innerHTML = `
        div.frame div:not(.textbox) {
          border-style: dotted;
          border-width: 1px;
          border-color: black;
        }
        `;
        document.head.appendChild(framestyle);
      }
      else {
        var framestyle = document.getElementsByTagName('style')[0];
        framestyle.remove();
      }

    }
  </script>
</html>
